# Azure OpenAI API Key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Search Configuration - Choose one:

# Option 1: Gemini with Google Search Grounding (recommended)
# USE_VERTEX_AI=true
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Option 2: Serper API (fallback if Gemini not configured)
SERPER_API_KEY=your_serper_api_key_here

# Firecrawl API Key (optional - for cloud Firecrawl service)
# FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Performance Configuration
# CONCURRENCY=20              # Number of parallel questions (default: 20)
# ENABLE_SCRAPING=false       # Disable Firecrawl scraping (default: true)
